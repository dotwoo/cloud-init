#cloud-config

ssh_pwauth: false
chpasswd:
  expire: false
  users:
    - name: ubuntu
      password: woshi566
      type: text

runcmd:
  - sed -i -e '/^Port/s/^.*$/Port 4444/' /etc/ssh/sshd_config
  - sed -i -e '/^PermitRootLogin/s/^.*$/PermitRootLogin yes/' /etc/ssh/sshd_config
  - sed -i -e '$aAllowUsers ubuntu' /etc/ssh/sshd_config
  - sed -i -e '$aAllowUsers ubuntu' /etc/ssh/sshd_config
  - restart ssh
write_files:
  - path: /root/.ssh/authorized_keys
    content: |
      ssh-rsa  dotwoo@wubinbindeMacBook-Air.local
    permissions: "0600"
    defer: true
